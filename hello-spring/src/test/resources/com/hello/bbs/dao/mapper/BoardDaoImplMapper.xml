<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hello.bbs.dao.impl.BoardDaoImpl">

<!-- JOIN된 select query의 결과를 담을 때 사용해야만 하는 태그 -->
   <resultMap type="com.hello.bbs.vo.BoardVO" 
              id="BoardVOMap"
              autoMapping="true">
    <!-- 컬럼과 맵핑되는 멤버변수의 이름을 연결시킨다. -->
    <!-- <id /> 조회한 컬럼이 PK인 경우 ID 태그를 사용한다. -->
    <!-- <result /> 조회한 컬럼이 일반 컬럼일 경우 result 태그를 사용한다. -->
    <id column="ID" property="id"/>
    <!-- <result column="SUBJECT" property="subject"/> -->
    
    <!-- 리스트를 넣어주는 태그 
    <association property=""></association>: 반대의 경우인 BoardVO를 가져오는 경우(출처를 알고 싶기 때문에 사용)
    <collection property=""></collection>: 리스트를 가져오는 List<FileVO>인 경우(1:N) -->
    <collection property="fileList"
                ofType="com.hello.file.vo.FileVO"
                autoMapping="true">
        <id column="FL_ID" property="flId"></id>
        <!-- <result column="FL_NM" property="flNm"/> -->
    </collection>
                
   </resultMap>
   
   
   <select id="selectBoardAllCount" resultType="_int">
   SELECT COUNT(1)
   FROM BOARD
   </select>

   <select id="selectAllBoard"
           resultType="com.hello.bbs.vo.BoardVO">
    SELECT ID
         , SUBJECT
         , CONTENT
         , EMAIL
         , VIEW_CNT
         , TO_CHAR(CRT_DT, 'YYYY-MM-DD') CRT_DT
         , TO_CHAR(MDFY_DT, 'YYYY-MM-DD') MDFY_DT
         , FILE_NAME
         , ORIGIN_FILE_NAME
      FROM BOARD
     ORDER BY ID DESC
   </select>
   

   <insert id="insertNewBoard"
           parameterType="com.hello.bbs.vo.BoardWriteRequestVO">
    
    <!-- id값을 생성해주는 태그, 미리 생성하기 때문에 order="BEFORE" -->
    <selectKey order = "BEFORE" 
               resultType = "_int"
               keyProperty = "id">
        SELECT SEQ_BOARD_PK.NEXTVAL
          FROM DUAL
    </selectKey>
    
    INSERT INTO BOARD
           (ID
         , SUBJECT
         , CONTENT
         , EMAIL
         , VIEW_CNT
         , CRT_DT
         , MDFY_DT
         , FILE_NAME
         , ORIGIN_FILE_NAME )
    VALUES 
           (#{id}
         , #{subject}
         , #{content}
         , #{email}
         , 0
         , SYSDATE
         , NULL
         , NULL
         , NULL)
   </insert>
   
   <select id="selectOneBoard"
           parameterType="_int"
           resultMap="BoardVOMap">
    SELECT B.ID
         , B.SUBJECT
         , B.CONTENT
         , B.EMAIL
         , B.VIEW_CNT
         , TO_CHAR(B.CRT_DT, 'YYYY-MM-DD') AS CRT_DT
         , TO_CHAR(B.MDFY_DT, 'YYYY-MM-DD') AS MDFY_DT
         , F.FL_ID
         , F.FL_NM
         , F.OBFS_FL_NM
         , F.OBFS_PTH
         , F.FL_SZ
      FROM BOARD B
      LEFT OUTER JOIN "FILE" F
        ON B.ID = F.ID
     WHERE B.ID = #{_parameter]}
   </select>
   
   <update id = "updateViewCountBy"
           parameterType="_int">
    UPDATE BOARD
       SET VIEW_CNT = VIEW_CNT + 1
     WHERE ID = #{_parameter}
   </update>
   
   <delete id = "deleteOneBoard"
           parameterType="_int">
    DELETE 
      FROM BOARD
     WHERE ID = #{_parameter}
   </delete>
   
   <update id = "updateOneBoard"
           parameterType = "com.hello.bbs.vo.BoardUpdateRequestVO">
    UPDATE BOARD
       SET SUBJECT = #{subject}
         , CONTENT = #{content}
         , EMAIL = #{email}
         , MDFY_DT = SYSDATE
     WHERE ID = #{id}
   </update>
   
</mapper>